pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'amarhabneen/bm_team7'
                }
            }
            steps {
                sh 'python -m py_compile StudyPlay/models.py StudyPlay/views.py'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'amarhabneen/bm_team7'
                }
            }
            steps {
                sh 'python manage.py test'
            }
            /*post {
                always {
                    junit 'test-reports/results.xml'
                }*/
            }
        }
    }
